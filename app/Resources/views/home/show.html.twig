
{% extends 'base.html.twig' %}

    {% block title %}Home{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel='stylesheet' href= "{{ asset('css/basic-template.css')}}">
        <link rel="stylesheet" href = "{{ asset('css/home-template.css')}}">

    {% endblock %}


            {% block user %}
            <span>Hello, guest!</span>
            {% endblock %}

            {% block sidebar %}
            <br>



        <div id="accordion">
            <div class="menu">Log In</div>
            <div class = "formWrapper">



                <form action="/" name = "Enter" method = "post">

                    <input type ="text" name = "login" placeholder = "Login" id = "oneLogin" required autofocus>
                    <input type ="password" name = "pswd" placeholder = "Password" required>
                    <div id = "forgotten">
                        <a href = "#">Forgot your password?</a>
                    </div>
                    <input type = "submit" name = "EnterSend" value = "Go!" >

                </form>
            </div>



            <div class="menu"><a href = " {{ path('VA_blog_newUser') }}">Register</a> </div>

            <div class="formWrapper">





                
                <form action="/new" name="Registration" method="post">

                    <input type="text" name="UserName" required placeholder="Name">
                    <input type="text" name="UserLogin" required placeholder="Login"><br>


                    <div id="genderDiv">
                            <span class="Gender_wr" datatype="radio">
                    <span class = "gndr">
                         <input type="radio" name="sex" value="1" id = "g_m" required>
                        <label class = g_1 for="g_m"> Male</label>
                    </span>
                            <span class="gndr">
                        <input type="radio" name="sex" value="2" id = "g_f" required>
                        <label class = g_1 for="g_f"> Female </label>
                    </span>

                            </span>
                    </div>

                    <input type="date" name="date">
                    <input type="password" name="pswd" required placeholder="Think up password"><br>
                    {#<input type="password" name="pswd_confirm" required placeholder="Confirm password"><br>#}
                    <input type="submit" name="reg" value="Register" class = "rg-btn">


                </form>


            </div>
        </div>

            {% endblock %}

            {% block body %}

                    <div id = "article">
                {% for post in posts %}
                        <div class="artTitle">
                            <h2>{{ post.title }}</h2>
                        </div>
                        <div class = "autor">
                            <span>Author: {{ post.author }}</span>
                        </div>
                        <div class="datePubl">
                            <span>Date: {{ post.createdDate|date('d-m-Y') }}</span>
                        </div>
                        <div class = "timePubl">
                            <span>Time: {{ post.createdTime|date('H:i:s') }} </span>
                        </div>
                        <div class="picArt">
                            <img id = "artPic" src="{{ asset('images/364015_motocikl_krasnyj_motocikly_1920x1200_(www.GetBg.net).jpg') }}" />
                        </div>


                        <a id="artMore" href="{{ path('VA_blog_post', {'id':post.id}) }}">Read More</a>

                        <div id = "commentsAndViews">
                            <span id = "comments">5 comments </span>
                            <span id = "views">123 views</span>
                        </div>
                {% endfor %}

                    </div>





            {% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>


    <script>
        $( function() {
            $( "#accordion" ).accordion();
        } );
    </script>




{% endblock %}



