            {% block sidebar %}
            <br>

            <div class="menu">Log In</div>
            <div class = "formWrapper">

                 <form action="/" name = "Enter" method = "post">
         
                    <input type ="text" name = "login" placeholder = "Login" required>
                    <input type ="password" name = "pswd" placeholder = "Password" required>
                    <div id = "forgotten">
                        <a href = "#">Forgot your password?</a>
                    </div>
                    <input type = "submit" name = "EnterSend" value = "Go!" class="lg-btn">
                </form>
            </div>

            <br>

                <div class="menu2">Register</div>
                <div class="formWrapper">
                    <form action="/" name="Registration" method="post">

                        <input type="text" name="UserName" required placeholder="Your name">
                        <input type="text" name="UserSurName" required placeholder="Your last name"><br>


                        <div id="genderDiv">
                            <span class="Gender_wr" datatype="radio">
                    <span class = "gndr">
                         <input type="radio" name="sex" value="1" id = "g_m" required>
                        <label class = g_1 for="g_m"> Male</label>
                    </span>
                            <span class="gndr">
                        <input type="radio" name="sex" value="2" id = "g_f" required>
                        <label class = g_1 for="g_f"> Female </label>
                    </span>

      </span>
                        </div>

                        <input type="date" name="date">
                        <input type="password" name="pswd" required placeholder="Think up password">
                        <input type="password" name="pswd_confirm" required placeholder="Confirm password"><br>
                        <input type="submit" name="reg" value="Register" class = "rg-btn">


                    </form>
                </div>

            {% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"></script>
    <script>
    $(function() {
  $('.menu').click(function() {
    $(this).toggleClass('active');
    $('.formWrapper').slideToggle();
  });
  $('.lg-btn').click(function() {
    $('.formWrapper').find('form').empty();
  });
});
</script>

<script>
    $(function (){
        $('.menu2').click(function (){
